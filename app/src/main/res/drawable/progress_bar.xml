<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#D3D3D3"/> <!-- Warna latar belakang progress bar -->
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <shape>
            <solid android:color="@color/color_button"/> <!-- Warna progress yang sedang berjalan -->
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <shape>
            <solid android:color="@color/color_button"/> <!-- Warna utama progress -->
            <corners android:radius="10dp"/>
        </shape>
    </item>
</layer-list>
